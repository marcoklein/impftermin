{
  "name": "impftermin",
  "version": "1.0.1",
  "main": "build/index.js",
  "author": "Marco Klein",
  "license": "MIT",
  "dependencies": {
    "debug": "^4.3.1",
    "puppeteer-core": "^9.1.0",
    "release-it": "^14.6.1",
    "telegraf": "^4.3.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^2.0.1",
    "@types/debug": "^4.1.5",
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.7",
    "pkg": "^5.1.0"
  },
  "scripts": {
    "start": "yarn build && env-cmd node build/index.js",
    "build": "tsc",
    "watch": "nodemon --exec \"yarn start\" --watch src -e ts",
    "package": "yarn build && pkg -t win-x64 -o dist/impftermin.exe build/index.js --public",
    "release": "env-cmd release-it"
  },
  "hooks": {
    "after:bump": "yarn package"
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "dist/*.exe"
      ]
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore",
              "section": "Chores"
            },
            {}
          ]
        }
      }
    }
  }
}
